<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="artem.homework.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/uggu"
        android:gravity="center"
        android:text="ГОООООРНЫЙ БЛ..."
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/mine_surveing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Маркшейдерия" />

        <Button
            android:id="@+id/dat_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Матем. статистика" />
    </LinearLayout>
</LinearLayout>
